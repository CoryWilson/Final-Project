<% include partials/head.ejs %>


  <div class="registration-tabs">
    <div class="tab-header-and-content">
      <a href="#" class="tab-link is-active">Register</a>
      <form action="register" method="post" class="register tab-content">
        <input type="text" name="username" placeholder="Username" required autofocus />
        <input type="email" name="email" placeholder="Email" required />
        <input type="password" name="password" placeholder="Password" required />
        <button type="submit">REGISTER</button>
      </form>
    </div>
    <div class="tab-header-and-content">
      <a href="#" class="tab-link">Login</a>
      <form action="login" method="post" class="login tab-content">
        <input type="email" name="email" placeholder="Email" required autofocus />
        <input type="password" name="password" placeholder="Password" required />
        <button type="submit">LOGIN</button>
      </form>
    </div>
    <div class="tab-header-and-content">
      <a href="#" class="tab-link">Social</a>
      <div class="tab-content">
        <button class="login__button--facebook">
          <a href="/auth/facebook">
          LOGIN with <i class="icon ion-social-facebook"></i>
          </a>
        </button>
        <button class="login__button--twitter">
          <a href="/auth/twitter">
            LOGIN with <i class="icon ion-social-twitter"></i>
          </a>
        </button>
      </div>
    </div>
  </div>

