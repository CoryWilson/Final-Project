<% include partials/head.ejs %>
  <h1><%= user.username %>'s Profile</h1>
  <div class="profile cards">
    <div class="local card">
    <a href="/editProfile">
      <button>Edit Profile</button>
    </a>
    <% if (user.local.email) { %>
        <h3>Local Login</h3>
        <strong>email</strong>: <%= user.local.email %><br>
  	<% } else { %>
  		  <a href="/connect/local"><button>Connect Local</button></a>
  	<% } %>
    <% if (user.facebook.token) { %>
        <h3>Facebook</h3>
				<strong>email</strong>: <%= user.facebook.email %><br>
				<strong>name</strong>: <%= user.facebook.name %><br>
		<% } else { %>
			  <a href="/connect/facebook" class="btn btn-primary"><button>Connect Facebook</button> </a>
    <% } %>
    <% if (user.twitter.token) { %>
        <h3>Twitter</h3>
				<strong>display name</strong>: <%= user.twitter.displayName %><br>
				<strong>username</strong>: <%= user.twitter.username %>
		<% } else { %>
			  <a href="/connect/twitter" class="btn btn-info"><button>Connect Twitter</button></a>
		<% } %>
  </div>

  </div>


